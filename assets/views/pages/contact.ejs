<!DOCTYPE html>
<html>
<% include ../partials/head %>

<body>
    <% include ../partials/header %>
    <div class="container">
        <div class="col-xs-12">
            <% include ../partials/crumbs %>
        </div>
        <div class="top_div"></div>
        <div class="col-lg-12">
            <% include ../partials/locals_errors %>
            <% include ../partials/form_errors %>
        </div>
        <div class="row">
            <div class="col-xs-8">
                <div class="col-lg-12 contact_top">
                    <div class="row">
                        <h1 class="page_title">KONTAKT MAGASINET</h1>
                        <div class="col-xs-12 col-md-6">
                            <!-- vis kontaktinformationer -->
                            <section>
                                <h3>
                                    <span class="glyphicon glyphicon-map-marker">Adresse</span>
                                </h3>
                                <p><strong><%= contact_info[0].name %></strong></p>
                                <p>
                                    <%= contact_info[0].adress %>
                                </p>
                                <p>
                                    <%= contact_info[0].city %>
                                </p>
                                <p>
                                    <%= contact_info[0].country %>
                                </p>
                            </section>
                        </div>
                        <div class="col-xs-12 col-md-6">
                            <h3>
                                Kontakt
                            </h3>
                            <p></p><span class="glyphicon glyphicon-map-marker">
                                <%= contact_info[0].phone %></span></p>
                            <p></p><span class="glyphicon glyphicon-credit-card">
                                <%= contact_info[0].fax %></span></p>
                            <p></p><span class="glyphicon glyphicon-envelope">
                                <%= contact_info[0].email %></span></p>
                            </section>
                        </div>
                    </div>
                </div>
                <div class="col-xs-12">
                    <!-- form for posting contact messages -->
                    <form class="contact_form" method="post" action="/contact/send_message" novalidate>
                        <div class="row">
                            <div class="col-xs-6">
                                <div class="form-group">
                                    <p>
                                        <label for="name">
                                            <strong>Dit Navn</strong>
                                        </label>
                                    </p>
                                    <p>
                                        <% if(typeof contact_body != 'undefined') { %>
                                            <% if(contact_body) { %>
                                                <input type="text" class="form-control" id="name" name="name" placeholder="Navn" value ="<%= contact_body.name%>" required>
                                            <% } %>
                                        <% } else { %>
                                            <input type="text" class="form-control" id="name" name="name" placeholder="Navn" required>
                                        <% } %>
                                    </p>
                                </div>
                            </div>
                            <div class="col-xs-6">
                                <div class="form-group">
                                    <p>
                                        <label for="name">
                                            <strong>Din e-mailadresse</strong>
                                        </label>
                                    </p>
                                    <p>
                                        <% if(typeof contact_body != 'undefined') { %>
                                            <% if(contact_body) { %>
                                                <input type="text" class="form-control" placeholder="E-mail adresse" id="name" name="email" value="<%= contact_body.email %>" required>
                                            <% } %>
                                        <% } else { %>
                                            <input type="text" class="form-control" placeholder="E-mail adresse" id="name" name="email" required>
                                        <% } %>
                                    </p>
                                </div>
                            </div>
                            <div class="col-xs-12">
                                <div class="form-group">
                                    <p>
                                        <label for="subject">
                                            <strong>Emne</strong>
                                        </label>
                                    </p>
                                    <p>
                                        <% if(typeof contact_body != 'undefined') { %>
                                            <% if(contact_body) { %>
                                                <input type="text" class="form-control" placeholder="Emne" id="topic" name="topic" value="<%= contact_body.topic%>" required>
                                            <% } %>
                                        <% } else { %>
                                            <input type="text" class="form-control" placeholder="Emne" id="topic" name="topic" required>
                                        <% } %>
                                    </p>
                                </div>
                            </div>
                            <div class="col-xs-12">
                                <div class="form-group">
                                    <p>
                                        <label for="message">
                                            <strong>Din besked</strong>
                                        </label>
                                    </p>
                                    <p>
                                        <% if(typeof contact_body != 'undefined') { %>
                                            <% if(contact_body) { %>
                                                <textarea type="text" class="form-control" placeholder="Besked" id="message" name="message" required><%= contact_body.message %></textarea>
                                            <% } %>
                                        <% } else { %>
                                            <textarea type="text" class="form-control" placeholder="Besked" id="message" name="message" required></textarea>
                                        <% } %>
                                    </p>
                                </div>
                                <div class="col-xs-12">
                                    <button type="submit">SEND BESKED</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-xs-4">
                <% include ../partials/sidebar %>
            </diV>
        </div>
    </div>
    <!-- /container -->
    <% include ../partials/footer %>
</body>

</html>